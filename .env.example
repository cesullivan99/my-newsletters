# Database Configuration (Supabase)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Connection
DATABASE_URL=postgresql://postgres.your-ref:password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# ElevenLabs API Configuration
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# OpenAI API Configuration (for newsletter parsing)
OPENAI_API_KEY=your-openai-api-key-here

# Gmail API OAuth Configuration
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:5001/auth/google/callback

# Backend URL for OAuth redirects
BACKEND_URL=http://localhost:5001

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here-use-strong-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Vocode Configuration
VOCODE_API_KEY=your-vocode-api-key-if-needed

# Application Configuration
APP_HOST=localhost
APP_PORT=5001
APP_DEBUG=true
APP_ENV=development

# Audio Processing Configuration
AUDIO_PROCESSING_BATCH_SIZE=10
AUDIO_PROCESSING_INTERVAL_MINUTES=15

# Voice Configuration
DEFAULT_VOICE_ID=JBFqnCBsd6RMkjVDRZzb
DEFAULT_VOICE_MODEL=eleven_multilingual_v2
AUDIO_STREAMING_LATENCY=2

# Storage Configuration (Supabase Storage)
STORAGE_BUCKET_NAME=newsletter-audio
AUDIO_BASE_URL=https://your-project-ref.supabase.co/storage/v1/object/public/newsletter-audio/

# Rate Limiting Configuration
GMAIL_API_RATE_LIMIT=100
ELEVENLABS_RATE_LIMIT=20

# Frontend Configuration (React Native)
FRONTEND_API_BASE_URL=http://localhost:5001
WEBSOCKET_URL=ws://localhost:5001

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/my_newsletters_test
TEST_GMAIL_MOCK=true
TEST_ELEVENLABS_MOCK=true